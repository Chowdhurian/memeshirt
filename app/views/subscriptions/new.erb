<!-- REGISTRATION FORM -->

<div class="text-center" style="padding:50px 0">
	<div class="logo">subscribe for moar meme-shirts</div>
	<!-- Main Form -->
	<div class="login-form-1">
		<form id="subscribe-form" action="/subscriptions/new" method="post" class="text-left">
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
          <div class="form-group">
            <label for="address" class="sr-only">address</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="address" value="<%= @new_subscription.address %>">
          </div>

          <div class="form-group">
            <label for="city" class="sr-only">city</label>
            <input type="text" class="form-control" id="city" name="city" placeholder="city" value="<%= @new_subscription.city %>">
          </div>

          <div class="form-group">
						<label for="postal_code" class="sr-only">postal code</label>
						<input type="text" class="form-control" id="postal_code" name="postal_code" placeholder="postal code" value="<%= @new_subscription.postal_code %>">
					</div>

					<div class="form-group">
						<label for="country" class="sr-only">country</label>
						<input type="text" class="form-control" id="country" name="country" placeholder="country" value="<%= @new_subscription.country %>">
					</div>

					<div class="form-group login-group-checkbox">
						<input type="radio" class="" name="gender" id="female" value="female" <%= gender_placeholder_female %>>
						<label for="female">female shirt style</label>

						<input type="radio" class="" name="gender" id="male" value="male" <%= gender_placeholder_male %>>
						<label for="male">male shirt style</label>
					</div>

          <div class="form-group login-group-checkbox">
            <input type="radio" class="" name="size" id="small" value="small" <%= size_placeholder_small %>>
            <label for="small">small</label>

            <input type="radio" class="" name="size" id="medium" value="medium" <%= size_placeholder_medium %>>
            <label for="medium">medium</label>

            <input type="radio" class="" name="size" id="large" value="large" <%= size_placeholder_large %>>
            <label for="large">large</label>
          </div>
				</div>
				<button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
			</div>
		</form>
	</div>
	<!-- end:Main Form -->
</div>


